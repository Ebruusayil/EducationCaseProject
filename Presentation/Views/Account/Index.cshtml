@model UpdateProfileDto

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Profil Güncelle";
}

<h2>Profil Güncelle</h2>

<div class="profile-container">
    <div class="profile-form">
        <form asp-action="UpdateProfile" method="post">
            <div>
                <label for="FullName">Ad Soyad:</label>
                <input type="text" id="FullName" name="FullName" value="@Model.FullName" required />
            </div>
            <div>
                <label for="Email">Email:</label>
                <input type="email" id="Email" name="Email" value="@Model.Email" required />
            </div>
            <div>
                <button type="submit" class="update-button">Güncelle</button>
            </div>
        </form>
    </div>
    <div class="profile-educations">
        @if (Model.IsInstructor)
        {
            <h3>Verdiğiniz Eğitimler</h3>
            <ul>
                @foreach (var education in Model.Educations)
                {
                    <li>@education.Name - Tamamlanma Oranı: @education.CompletionPercentage%</li>
                }
            </ul>
        }
        else
        {
            <h3>Aldığınız Eğitimler</h3>
            <ul>
                @foreach (var education in Model.Educations)
                {
                    <li>@education.Name - Tamamlanma Oranı: @education.CompletionPercentage%</li>
                }
            </ul>
        }
    </div>
</div>

<style>
    .profile-container {
        display: flex;
        justify-content: space-between;
        margin: 20px;
    }

    .profile-form, .profile-educations {
        width: 48%;
    }

        .profile-form div, .profile-educations div {
            margin-bottom: 15px;
        }

    .update-button {
        padding: 10px 15px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .update-button:hover {
            background-color: #45a049;
        }
</style>
