@model List<Entities.Concrete.Category>

@{
    ViewData["Title"] = "Category List";

    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Category List</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Category</a>
</p>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
            </tr>
        }
    </tbody>
</table>
